@model IEnumerable<CityWeather>;
@{
	ViewBag.Title = "All City Weathers";
	string ReturnBoxColor(int? temperature)
	{
		return temperature switch
		{
			(< 44) => "box-blue",
			( >=44 ) and ( < 74) => "box-green",
			(>=74)=>"box-orange",
			(null)=>"box-blue"
		};
	}

}



<div class="center-div ">
	<div class="flex-borderless">    
		@foreach (CityWeather cityWeather in Model)
		{
			<div class=@ReturnBoxColor(cityWeather.TemperatureFahrenheit)>		
				<div class="flex-borderless">
					<div class="left-items">
						<div class="font-size bold-text">@cityWeather.CityName</div>
						<div class="text-dark-grey bold-text">@cityWeather.DateAndTime.ToString("hh:mm tt")</div>
						<a href="/weather/@cityWeather.CityUniqueCode">Details</a>
					</div>
					<div class="vertical-line"></div>
					<div class="fahrenheit-font-size bold-text">@cityWeather.TemperatureFahrenheit</div>
					<div class="degree-symbol-style text-grey">°F</div>
				</div>
			</div>
		}
	</div>
</div>
